<section id='todos'>
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
    <ul>
      <li>
        <form class='delete' action='/lists/<%= params[:list_id] %>/delete' method='post'>
          <button class='delete' type='submit'>Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action='/lists/<%= params[:list_id] %>' method='post'>
  <dl>
    <dt>
      <label for='list_name'>Enter the new name for the list:</label>
    </dt>
    <dd>
      <input name='list_name' placeholder='List Name' type='text' value='<%= params[:list_name] || @list[:name] %>'>
    </dd>
  </dl>
  <fieldset class='actions'>
    <input type='submit' value='Save'>
    <a href='/lists/<%= params[:list_id] %>'>Cancel</a>
  </fieldset>
</form>

<% content_for :header_links do %>
  <a href='/lists'>All Lists</a>
<% end %>
